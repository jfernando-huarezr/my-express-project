<h1><%= title %></h1>
<form method="POST">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input
      type="text"
      id="first_name"
      class="form-control"
      placeholder="First name (Christian)"
      name="first_name"
      required
      value="<%= (undefined === author ? '' : author.first_name) %>"
    />
    <label for="family_name">Family Name:</label>
    <input
      type="text"
      id="family_name"
      class="form-control"
      placeholder="Family name (Surname)"
      name="family_name"
      required
      value="<%= (undefined === author ? '' : author.family_name) %>"
    />
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <input
      type="date"
      id="date_of_birth"
      class="form-control"
      name="date_of_birth"
      value="<%= (undefined === author ? '' : author.date_of_birth) %>"
    />

    <label for="date_of_death">Date of death:</label>
    <input
      type="date"
      id="date_of_death"
      class="form-control"
      name="date_of_death"
      value="<%= (undefined === author ? '' : author.date_of_death) %>"
    />
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
<ul class="mt-3">
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }); %>
</ul>
<% } %>
