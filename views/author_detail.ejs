<h1><%= author.name %></h1>
<p><%= author.lifespan %></p>

<div style="margin-left: 20px; margin-top: 20px">
  <h2 style="font-size: 1.5rem">Books</h2>
  <% if (author_books.length) { %>
  <dl>
    <% author_books.forEach(book => { %>
    <dt>
      <a href="<%= encodeURI(book.url) %>"><%= book.title %></a>
    </dt>
    <dd><%= book.summary %></dd>
    <% }) %>
  </dl>
  <% } else { %>
  <p>This author has no books</p>
  <% } %>
</div>
